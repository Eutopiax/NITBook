@using NITBook.Models;
@{
    Layout = null;
    ViewBag.name = ((User)Session["user"]).userName;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title--NIT读者后台管理</title>
    @Styles.Render("~/layui/css/layui.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/detail.css")
    @Styles.Render("~/Content/sort.css")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    
</head>

<body>

    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">NIT 图书管理系统</div>

            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="~/Content/image/header-icon.jpg" class="layui-nav-img">
                        @ViewBag.name
                    </a>
                    <dl class="layui-nav-child">
                        <dd>
                            @Html.ActionLink("基本资料", "UserDetails", new { id = ((User)Session["user"]).Id })
                        <dd>
                            @Html.ActionLink("安全设置", "EditInfo", new { id = ((User)Session["user"]).Id })
                        </dd>
                    </dl>
                </li>
                <li class="layui-nav-item">@Html.ActionLink("退出系统", "Cancellation")</li>
            </ul>
        </div>

        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item">
                        <a href="javascript:;">图书借阅</a>
                        <dl class="layui-nav-child">
                            <dd>@Html.ActionLink("图书搜索", "SearchBook")</dd>
                            <dd>@Html.ActionLink("图书总览", "BooksList")</dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item">
                       @Html.ActionLink("安全设置", "EditInfo", new { id = ((User)Session["user"]).Id })
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;">借阅信息管理</a>
                        <dl class="layui-nav-child">
                            <dd>@Html.ActionLink("借阅信息总览", "BorrowInfoes",new { id = ((User)Session["user"]).Id})</dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>

        <div class="layui-body">
            <!-- 内容主体区域 -->
                <div class="container-fluid pt-3">
                    @RenderBody()
                </div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            © hack-hu NIT 图书管理系统 2019
        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/NIT/check.js"></script>
    <script src="~//layui/layui.all.js"></script>
    <script>
        //JavaScript代码区域
        layui.use('element', function () {
            var element = layui.element;

        });
    </script>
</body>

</html>
