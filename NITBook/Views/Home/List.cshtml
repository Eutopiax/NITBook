
@{
    Layout = null;
    ViewBag.Title = "排行榜";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>NIT书籍排行榜</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/footer.css")
    @Styles.Render("~/Content/list.css")
</head>

<body>
    <header class="">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <a class="navbar-brand" href="#"><img src="~/Content/image/NIT-Library.jpg" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="text-center collapse navbar-collapse" id="navbarSupportedContent">
                <ul id="navs" class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("主页", "Index", "Home", new { area = "" }, new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("书籍分类", "Sort", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("排行榜", "List", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false">
                            数字资源
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">维普网</a>
                            <a class="dropdown-item" href="#">CNKI知网</a>
                            <a class="dropdown-item" href="#">万方数据资源系统</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("NIT图书馆简介", "Info", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("联系我们", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("登陆", "Index", "Login", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div id="main">
        <div id="carouselExampleIndicators" class="carousel slide carousel-vertical" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Content/image/bg/bg1-1.jpg" alt="First slide">
                    <div class="carousel-caption">
                        <img class="img-responsive animated" src="~/Content/image/book/10.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/11.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/13.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/14.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/12.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/15.jpg">
                        <h5>年度高分图书</h5>
                        <p>2018年度高分图书，这里一定有适合你的那本</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/image/bg/bg2-2.jpg" alt="Second slide">
                    <div class="carousel-caption">
                        <img class="img-responsive animated" src="~/Content/image/book/20.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/21.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/book1-1.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/3.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/24.jpg">
                        <img class="img-responsive" src="~/Content/image/book/25.jpg">
                        <h5>年度关注榜</h5>
                        <p>是否好奇他们究竟会有怎样的魔力</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/image/bg/bg3-3.jpg" alt="Third slide">
                    <div class="carousel-caption">
                        <img class="img-responsive animated" src="~/Content/image/book/30.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/31.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/3.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/5.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/34.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/35.jpg">
                        <h5>年度小说榜</h5>
                        <p>爱看小说的你对他们有何印象</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/image/bg/bg4-4.jpg" alt="Fourth slide">
                    <div class="carousel-caption">
                        <img class="img-responsive animated" src="~/Content/image/book/40.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/41.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/6.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/7.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/44.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/45.jpg">
                        <h5>年度文学榜</h5>
                        <p>每个文艺青年的心中都有属于自己的诗</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Content/image/bg/bg5-5.jpg" alt="Fifth slide">
                    <div class="carousel-caption">
                        <img class="img-responsive animated" src="~/Content/image/book/50.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/51.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/52.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/53.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/54.jpg">
                        <img class="img-responsive animated" src="~/Content/image/book/55.jpg">
                        <h5>中文小说榜</h5>
                        <p>究竟藏着哪些秘密</p>
                    </div>
                </div>
            </div>
            <a id="pre" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a id="next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>

</html>
